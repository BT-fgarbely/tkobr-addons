                <div id="discount-card-title">
                    Select Discount Card :            
                </div>
                <div id="discount-card-frame">
                    <t t-esc="widget.get_discount_cards(widget.get_cur_pos_config_id())" />
                    <select id="discount-card-select"></select>   
                </div>      
                <div id="AlertNoCashier"></div>     
        </div>
   			
   	 </t>
    	
