<?xml version="1.0" encoding="utf-8"?>

<templates id="template" xml:space="preserve">
    <!-- Add Category Shortcut Widget on ProductScreen-->
    
     <t t-extend="PaymentScreenWidget">
	    <t t-jquery="div.pos-payment-container" t-operation="append">
	    	
               <span class='discount-card-label'>Discount Cards</span>
				<select class="discount-card-select">
					<option value='x'>None</option>
                    <t t-foreach='widget.pos.cards' t-as='card'>
                        <option class="discount-card-options" t-att-id='card.id' t-att-type='card.type' t-att-value='card.value'> 
                            <t t-esc='card.name'/>
                        </option>
                    </t>
                </select>                
              
	    </t>
	</t>
	
	
	<!-- add discount to OrderWidget -->
	 <t t-extend="OrderWidget">
	    <t t-jquery="div.subentry" t-operation="append">
	    	
           <div class='discount'>Discount: <span class="value">0.00â‚¬</span></div>
              
	    </t>
	</t>
<!-- Category shortcut End-->
    
</templates>
   	 