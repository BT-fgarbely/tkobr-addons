<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="act_create_nfse" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">create_nfse</field>
            <field name="action">action_create_nfse()</field>
            <field name="kind">function</field>
        </record>
        
        <record id="act_cancel_nfse" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">cancel_nfse</field>
            <field name="action">action_cancel_nfse()</field>
            <field name="kind">function</field>
        </record>
        
        <record id="act_check_create_nfse" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">check_create_nfse</field>
            <field name="kind">dummy</field>
        </record>
        
        <record id="act_check_cancel_nfse" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">check_cancel_nfse</field>
            <field name="action">action_check_cancel_nfse()</field>
            <field name="kind">function</field>
        </record>
        
        <record id="account.t4" model="workflow.transition">
            <field name="act_from" ref="account.act_draft"/>
            <field name="act_to" ref="act_create_nfse"/>
            <field name="signal">invoice_open</field>
        </record>
        
        <record id="account.pro2_to_open" model="workflow.transition">
            <field name="act_from" ref="account.act_proforma2"/>
            <field name="act_to" ref="act_create_nfse"/>
            <field name="signal">invoice_open</field>
        </record>
        
        <record id="account.t12" model="workflow.transition">
            <field name="act_from" ref="account.act_open"/>
            <field name="act_to" ref="act_cancel_nfse"/>
            <field name="signal">invoice_cancel</field>
        </record>
        
        <record id="account.t14" model="workflow.transition">
            <field name="act_from" ref="account.act_open_test"/>
            <field name="act_to" ref="act_cancel_nfse"/>
            <field name="signal">invoice_cancel</field>
        </record>
        
        <record id="check_create_nfse" model="workflow.transition">
            <field name="act_from" ref="act_create_nfse"/>
            <field name="act_to" ref="act_check_create_nfse"/>
            <field name="signal">check_create_nfse</field>
        </record>
        
        <record id="check_cancel_nfse" model="workflow.transition">
            <field name="act_from" ref="act_cancel_nfse"/>
            <field name="act_to" ref="act_check_cancel_nfse"/>
            <field name="signal">check_cancel_nfse</field>
        </record>
        
        <record id="created_nfse" model="workflow.transition">
            <field name="act_from" ref="act_check_create_nfse"/>
            <field name="act_to" ref="account.act_open"/>
            <field name="condition">action_check_create_nfse()</field>
            <field name="kind">function</field>
        </record>
        
        <record id="canceled_nfse" model="workflow.transition">
            <field name="act_from" ref="act_check_cancel_nfse"/>
            <field name="act_to" ref="account.act_cancel"/>
        </record>
        
        
    </data>
</openerp>